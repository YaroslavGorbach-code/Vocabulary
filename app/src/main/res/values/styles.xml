<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimarySurface">#fff</item>
        <item name="android:statusBarColor">#222</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="appBarLayoutStyle">@style/Vocabulary.AppBar</item>
    </style>

    <style name="Vocabulary.AppBar" parent="@style/Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?colorPrimarySurface</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="TextPrimary" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?colorControlNormal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseLayoutItem">
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="BaseAppTheme.Teal">
        <item name="colorPrimary">@color/TealPrimary</item>
        <item name="colorPrimaryVariant">@color/TealPrimaryVariant</item>
        <item name="colorSecondary">@color/TealSecondary</item>
