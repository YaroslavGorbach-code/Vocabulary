<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/BaseLayoutItem"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_school" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|start"
        android:text="@string/Level"
        style="@style/TextPrimary" />

    <yaroslavgorbach.koropapps.vocabulary.feature.common.uikit.TextProgressView
        android:id="@+id/level_progress"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_weight="0.15"
        app:textProgressColor="@color/green"
        app:textProgressStrokeWidth="2dp"
        tools:textProgress="50" />
</LinearLayout>
