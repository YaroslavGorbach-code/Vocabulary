<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_selectable_item_on_background"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_school" />

    <TextView
        style="@style/TextPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:layout_weight="1"
        android:gravity="center|start"
        android:text="@string/orator_level" />

    <yaroslavgorbach.koropapps.vocabulary.feature.common.uikit.customview.ImageProgressView
        android:id="@+id/level_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:imageProgress="50"
        app:imageProgressColor="@color/gold"
        app:imageProgressOutlineStrokeWidth="2dp"
        app:imageProgressStrokeWidth="2dp"
        android:layout_gravity="center" />
</LinearLayout>
