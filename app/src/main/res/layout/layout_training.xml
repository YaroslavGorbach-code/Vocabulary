<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="?selectableItemBackground"
        android:padding="8dp">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mountain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="8dp"
            android:text="@string/daily_training"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_alignEnd="@+id/name"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/name"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tool:text="Дней подряд: 3" />

        <yaroslavgorbach.koropapps.vocabulary.feature.common.uikit.LetterProgressView
            android:id="@+id/letterProgressView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/letterProgressView"
            app:layout_constraintEnd_toStartOf="@+id/letterProgressView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/letterProgressView"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="3dp"
            app:textSize="8sp"
            tool:ignore="SmallSp"
            tools:progress="30" />

        <yaroslavgorbach.koropapps.vocabulary.feature.common.uikit.LetterProgressView
            android:id="@+id/letterProgressView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/letterProgressView4"
            app:layout_constraintTop_toBottomOf="@+id/days"
            tools:progress="30"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="3dp"
            app:textSize="8sp"
            tool:ignore="SmallSp" />

        <yaroslavgorbach.koropapps.vocabulary.feature.common.uikit.LetterProgressView
            android:id="@+id/letterProgressView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/letterProgressView5"
            app:layout_constraintEnd_toStartOf="@+id/letterProgressView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/letterProgressView3"
            app:layout_constraintTop_toTopOf="@+id/letterProgressView5"
            tools:progress="30"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="3dp"
            app:textSize="8sp"
            tool:ignore="SmallSp" />

        <yaroslavgorbach.koropapps.vocabulary.feature.common.uikit.LetterProgressView
            android:id="@+id/letterProgressView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/letterProgressView4"
            app:layout_constraintEnd_toStartOf="@+id/letterProgressView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/letterProgressView"
            app:layout_constraintTop_toTopOf="@+id/letterProgressView4"
            tools:progress="30"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="3dp"
            app:textSize="8sp"
            tool:ignore="SmallSp" />

        <yaroslavgorbach.koropapps.vocabulary.feature.common.uikit.LetterProgressView
            android:id="@+id/letterProgressView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/letterProgressView3"
            app:layout_constraintEnd_toStartOf="@+id/letterProgressView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/letterProgressView2"
            app:layout_constraintTop_toTopOf="@+id/letterProgressView3"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="3dp"
            app:textSize="8sp"
            tool:ignore="SmallSp"
            tools:progress="30" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

